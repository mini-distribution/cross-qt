[Unit]
Description=Snowshoe Browser
After=pvr.service

[Service]
Type=simple
Restart=always
ExecStart=/bin/bash -c "export QT_QPA_PLATFORM=eglfs ; \
                        echo performance > /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor; \
                        echo 0 > /sys/class/graphics/fbcon/cursor_blink; \
                        /bin/snowshoe -platform eglfs -plugin tslib http://www.google.com"

[Install]
WantedBy=multi-user.target
